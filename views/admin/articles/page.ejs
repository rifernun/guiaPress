<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>
<body>
    
    <p></p>
    <div class="container">
        <% result.articles.rows.forEach(articles => { %>
            <div class="card">
                <div class="card-header">
                    <h1><%= articles.title %></h1>
                </div>
                <div class="card-body">
                    <a href="/<%= articles.slug %>" class="btn btn-success">Ler Artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) { %>
                    <a style="float: left;" href="/articles/page/<%= result.page - 1 %>"><<< Prev</a>
                <% } else if(result.page == 2 ) { %>
                    <a style="float: left;" href="/"><<< Prev</a>
                <% } %>

                <% if(result.next) { %>
                    <a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Next >>></a>
                <% } %>
            </div>
        </div>
    </div>
</body>
<%- include('../../partials/footer.ejs') %>